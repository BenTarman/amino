frame block_a {
    parent front_table;
    translation [0, -.2, 0.0551];
    geometry {
        isa block;
        isa red;
    }
}

frame block_b {
    parent front_table;
    translation [0, -.45, 0.0551];
    geometry {
        isa block;
        isa blue;
    }
}
