
/* Classes */
class table {
    shape box;
    color [.6, .3, .6];
    alpha 0.5;
}

class block {
    shape box;
    color [0, 1, 0];
    alpha 0.5;
    dimension [.1, .1, .1];
}

/* Tables */
frame front_table {
    translation [.8, 0, 0];
    geometry {
        isa table;
        dimension [1, 3, .01];
    }
}

frame side_table1 {
    translation [-.7, -1, 0];
    geometry {
        isa table;
        dimension [2, 1, .01];
    }
}

frame side_table2 {
    translation [-.7, 1, 0];
    geometry {
        isa table;
        dimension [2, 1, .01];
    }
}

/* Blocks */
frame block_a {
    parent front_table;
    translation [0, -.2, 0.0551];
    geometry {
        isa block;
        color [1, 0, 0];
    }
}

frame block_b {
    parent front_table;
    translation [0, -.45, 0.0551];
    geometry {
        isa block;
        color [0, 1, 0];
    }
}
